---
import Header from "../components/Header.astro";
import Container from "../components/Container.astro";
import "../styles/global.css";
import Footer from "../sections/Footer.astro";

export type Props = {
  title: string;
};

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content="Home of web developer Tobias Haugen" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- <Header /> -->
    <div class="h-4 bg-gradient-to-l via-green-300 from-blue-300 to-red-300">
    </div>
    <div
      class="absolute top-0 left-0 w-full h-4 bg-gradient-to-b from-transparent to-white"
    >
    </div>
    <Container>
      <slot />
    </Container>
    <Footer />
  </body>
</html>

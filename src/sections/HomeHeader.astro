---
import { Image } from "@astrojs/image/components";
import cn from "classnames";

import GetInTouchButton from "../components/GetInTouchButton.preact";
import SocialIconsList from "../components/SocialIconsList.astro";
---

<h1
  class={cn(
    "text-4xl md:text-6xl lg:text-7xl xl:text-8xl font-roboto font-black",
    "mt-16 mb-8 md:mb-24 text-center text-zinc-800 dark:text-zinc-300"
  )}
>
  Top up your team with an expert web developer
</h1>
<div class="flex items-center flex-col md:flex-row xl:mx-40 mb-36">
  <Image
    src="/profile_pic.jpg"
    width={250}
    aspectRatio="1:1"
    alt="Image of Tobias"
    class="rounded-full mb-16 md:mb-0 md:mr-16 mx-auto"
  />
  <div class="text-2xl lg:text-3xl block">
    <p class="mb-4">
      Hi there, I'm Tobias <span class="animate-wiggle inline-block">ðŸ‘‹</span>
    </p>
    <p class="mb-8">
      I've built for the web since I was a teenager, doing it professionally for
      over 10 years. These days, I'm helping teams to build great products
      together.
    </p>
    <div class="flex items-center">
      <div class="mr-4 md:mr-6"></div>
      <!-- <SocialIconsList /> -->
    </div>
    <div>
      <GetInTouchButton client:only />
    </div>
  </div>
</div>

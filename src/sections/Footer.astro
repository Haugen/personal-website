---
import cn from "clsx";

import Container from "../components/Container.astro";
import GetInTouchButton from "../components/GetInTouchButton.preact";
import SocialLinks from "../components/SocialLinks.astro";
---

<footer
  class={cn(
    "bg-zinc-900 text-zinc-100 dark:bg-zinc-100 dark:text-zinc-900",
    "py-16 mt-16",
  )}
>
  <Container>
    <div class="max-w-3xl mx-auto">
      <h3 class="text-4xl mb-8">Come say hi</h3>
      <p class="text-xl mb-8 max-w-md">
        I'm always interested in connecting with friendly people in the tech
        industry.
      </p>
      <GetInTouchButton client:only="preact" />
      <SocialLinks />
      <p class="text-xs text-zinc-400 dark:text-zinc-600 mt-8">
        Tobias Haugen is incorporated in Sweden under White Fluffy Clouds AB,
        org. nr: 559407-6126.
      </p>
    </div>
  </Container>
</footer>

---
import type { Sizes } from "../types";
import SkillLabel from "./SkillLabel.astro";

export interface Props {
  title: string;
  skills: string[];
  size?: Sizes;
  bg?: string;
}

const { title, skills, size = "md", bg = "bg-gray-800" } = Astro.props;
---

<h2 class="mb-2 text-xl mt-8 first:mt-0">{title}</h2>
<ul class="flex flex-wrap gap-1">
  {
    skills.map((skill) => (
      <li>
        <SkillLabel size={size} bg={bg}>
          {skill}
        </SkillLabel>
      </li>
    ))
  }
</ul>

---
export interface Props {
  name: string;
  title: string;
}

const { name, title } = Astro.props;
---

<div class="flex flex-col text-center my-8 px-16">
  <quote class="text-4xl mb-3 text-slate-800"><slot /></quote>
  <div class="flex w-full justify-center gap-x-2 text-xl text-gray-500">
    <p class="text-black">{name}</p> | <p>{title}</p>
  </div>
</div>
